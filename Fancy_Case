#include <iostream>
#include <string>
using namespace std;

string fancyCase(string S, int x, int y) {
    for (int i = 0; i < S.length(); i++) {
        if (i % x == 0 && i % y == 0 && S[i] != ' ') {
            S[i] = toupper(S[i]);
        }
    }
    return S;
}

int main() {
    int T;
    cin >> T;
    while (T--) {
        int len, x, y;
        cin >> len >> x >> y;
        cin.ignore();
        string S;
        getline(cin, S);
        cout << fancyCase(S, x, y) << endl;
    }
    return 0;
}
